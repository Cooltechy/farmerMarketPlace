        async function placeOrderFromModal() {
            try {
                const deliveryAddress = {
                    street: document.getElementById('addressStreet').value.trim(),
                    city: document.getElementById('addressCity').value.trim(),
                    state: document.getElementById('addressState').value.trim(),
                    pincode: document.getElementById('addressPincode').value.trim(),
                    landmark: document.getElementById('addressLandmark').value.trim()
                };
                
                const orderData = {
                    buyerId: window.currentUser._id,
                    buyerName: window.currentUser.name,
                    buyerEmail: window.currentUser.email,
                    buyerContact: window.currentUser.contact,
                    productId: currentProduct._id,
                    quantity: selectedQuantity,
                    deliveryAddress,
                    paymentMethod: document.getElementById('paymentMethod').value,
                    notes: document.getElementById('orderNotes').value.trim()
                };

                const response = await fetch('/orders/place', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(orderData)
                });

                const result = await response.json();
                
                // Reset button state
                const btn = document.getElementById('placeOrderBtn');
                const btnText = document.getElementById('orderBtnText');
                btn.disabled = false;
                btnText.textContent = 'Place Order';
                
                if (result.success) {
                    showOrderMessage(`üéâ Order placed successfully!\n\nOrder Number: ${result.orderNumber}\n\nThe farmer will contact you soon. You can track your order in the Orders section.`, false);
                    
                    // Refresh products to show updated quantity after a delay
                    setTimeout(() => {
                        loadProducts();
                        closeOrderModal();
                    }, 3000);
                } else {
                    showOrderMessage(`‚ùå Order Failed: ${result.message}`, true);
                }
                
            } catch (error) {
                console.error('Error placing order:', error);
                
                // Reset button state
                const btn = document.getElementById('placeOrderBtn');
                const btnText = document.getElementById('orderBtnText');
                btn.disabled = false;
                btnText.textContent = 'Place Order';
                
                showOrderMessage('‚ùå Failed to place order. Please try again.', true);
            }
        }

