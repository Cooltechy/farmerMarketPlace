            if (!product) {
                alert('Product not found. Please refresh the page.');
                return;
            }
            
            // Show negotiation setup modal
            showNegotiationModal(product);
        }
        
        function showNegotiationModal(product) {
            currentNegotiationProduct = product;
            
            // Populate modal with product information
            document.getElementById('negotiationProductName').textContent = product.name;
            document.getElementById('negotiationCurrentPrice').textContent = `‚Çπ${product.price}/${product.unit}`;
            document.getElementById('negotiationProductCategory').textContent = product.category;
            document.getElementById('negotiationAvailable').textContent = product.quantity;
            document.getElementById('negotiationUnit').textContent = product.unit;
            
            // Reset form
            document.getElementById('negotiationQuantity').value = 1;
            document.getElementById('negotiationQuantity').max = product.quantity;
            document.getElementById('negotiationOfferedPrice').value = '';
            document.getElementById('negotiationOfferedPrice').placeholder = `Enter offer (current: ${product.price})`;
            document.getElementById('negotiationMessage').value = `Hi! I'm interested in buying your ${product.name}. Would you consider my price offer?`;
            
            // Hide messages and comparison
            document.getElementById('negotiationSuccessMessage').style.display = 'none';
            document.getElementById('negotiationErrorMessage').style.display = 'none';
            document.getElementById('priceComparisonPreview').style.display = 'none';
            
            // Show modal
            document.getElementById('negotiationModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }
        
        function closeNegotiationModal() {
            document.getElementById('negotiationModal').classList.remove('show');
            document.body.style.overflow = 'auto';
            currentNegotiationProduct = null;
        }
        
        // Update price comparison when inputs change
        function updatePriceComparison() {
            if (!currentNegotiationProduct) return;
            
            const quantity = parseInt(document.getElementById('negotiationQuantity').value) || 0;
            const offeredPrice = parseFloat(document.getElementById('negotiationOfferedPrice').value) || 0;
            
            if (quantity > 0 && offeredPrice > 0) {
                const currentTotal = quantity * currentNegotiationProduct.price;
                const offeredTotal = quantity * offeredPrice;
                const savings = currentTotal - offeredTotal;
                
                document.getElementById('negotiationTotalPreview').textContent = `‚Çπ${offeredTotal.toLocaleString()}`;
                
                if (savings > 0) {
                    document.getElementById('savingsPreview').textContent = `(Save ‚Çπ${savings.toLocaleString()})`;
                    document.getElementById('savingsPreview').style.color = '#4caf50';
                } else if (savings < 0) {
                    document.getElementById('savingsPreview').textContent = `(‚Çπ${Math.abs(savings).toLocaleString()} more)`;
                    document.getElementById('savingsPreview').style.color = '#f44336';
                } else {
                    document.getElementById('savingsPreview').textContent = '(Same price)';
                    document.getElementById('savingsPreview').style.color = '#666';
                }
                
                document.getElementById('priceComparisonPreview').style.display = 'flex';
            } else {
                document.getElementById('priceComparisonPreview').style.display = 'none';
            }
        }
        
        // Display negotiation prices
        function displayNegotiationPrices() {
            if (!window.userNegotiations) return;
            
            const negotiations = window.userNegotiations;
            
            negotiations.forEach(negotiation => {
                const productId = negotiation.productId._id;
                const negotiationElement = document.getElementById(`negotiation-${productId}`);
                
                if (negotiationElement) {
                    const originalPrice = negotiation.productId.price;
                    const negotiatedPrice = negotiation.finalPrice || negotiation.initialPrice;
                    const status = negotiation.status;
                    
                    let html = '';
                    let className = '';
                    
                    if (status === 'open') {
                        className = 'negotiation-open';
                        html = `üí¨ Negotiating: ‚Çπ${negotiatedPrice}/${negotiation.unit}`;
                        
                        if (negotiatedPrice < originalPrice) {
                            const savings = originalPrice - negotiatedPrice;
                            html += `<div class="price-comparison negotiating">Potential savings: ‚Çπ${savings}/${negotiation.unit}</div>`;
                        }
                    } else if (status === 'accepted') {
                        className = 'negotiation-accepted';
                        html = `‚úÖ Agreed: ‚Çπ${negotiatedPrice}/${negotiation.unit}`;
                        
                        if (negotiatedPrice < originalPrice) {
                            const savings = originalPrice - negotiatedPrice;
                            html += `<div class="price-comparison savings">You saved: ‚Çπ${savings}/${negotiation.unit}</div>`;
                        }
                    }
                    
                    negotiationElement.className = `negotiation-price ${className}`;
                    negotiationElement.innerHTML = html;
                    negotiationElement.style.display = 'block';
                    
                    // Add click handler to open negotiation chat
                    negotiationElement.style.cursor = 'pointer';
                    negotiationElement.onclick = function() {
                        window.location.href = `/negotiations/${negotiation._id}/chat`;
                    };
                }
            });
        }
        
        // Submit negotiation
        async function submitNegotiation() {
            if (!currentNegotiationProduct) return;
            
            const quantity = parseInt(document.getElementById('negotiationQuantity').value);
            const offeredPrice = parseFloat(document.getElementById('negotiationOfferedPrice').value);
            const message = document.getElementById('negotiationMessage').value.trim();
            
            // Validate inputs
            if (!quantity || quantity <= 0 || quantity > currentNegotiationProduct.quantity) {
                showNegotiationMessage('Please enter a valid quantity.', true);
                return;
            }
            
            if (!offeredPrice || offeredPrice <= 0) {
                showNegotiationMessage('Please enter a valid price offer.', true);
                return;
            }
            
            // Show loading state
            const btn = document.getElementById('startNegotiationBtn');
            const btnText = document.getElementById('negotiationBtnText');
            btn.disabled = true;
            btnText.innerHTML = '<span class="loading-spinner"></span>Creating negotiation...';
            
            try {
                const response = await fetch('/negotiations/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        buyerId: window.currentUser._id,
                        productId: currentNegotiationProduct._id,
                        quantity: quantity,
                        offeredPrice: offeredPrice,
                        message: message || null
                    })
                });
                
                const result = await response.json();
                
                // Reset button state
                btn.disabled = false;
                btnText.textContent = 'Start Chat & Negotiate';
                
                if (result.success) {
                    showNegotiationMessage('‚úÖ Negotiation created! Redirecting to chat...', false);
                    
                    // Redirect to chat after a short delay
                    setTimeout(() => {
                        window.location.href = `/negotiations/${result.negotiationId}/chat?userId=${window.currentUser._id}&userType=buyer`;
                    }, 1500);
                } else {
                    showNegotiationMessage(`‚ùå Failed to start negotiation: ${result.message || 'Unknown error'}`, true);
                }
                
            } catch (error) {
                console.error('Error creating negotiation:', error);
                
                // Reset button state
                btn.disabled = false;
                btnText.textContent = 'Start Chat & Negotiate';
                
                showNegotiationMessage('‚ùå Network error. Please try again.', true);
            }
        }
        
        function showNegotiationMessage(message, isError = false) {
            const successDiv = document.getElementById('negotiationSuccessMessage');
            const errorDiv = document.getElementById('negotiationErrorMessage');
            
            if (isError) {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
                successDiv.style.display = 'none';
            } else {
                successDiv.textContent = message;
                successDiv.style.display = 'block';
                errorDiv.style.display = 'none';
            }
        }
        
        // Load user negotiations
        async function loadUserNegotiations() {
            try {
                const response = await fetch(`/negotiations/buyer/${window.currentUser._id}`);
                const data = await response.json();
                
                if (data.success) {
                    window.userNegotiations = data.negotiations;
                    displayNegotiationPrices();
                }
            } catch (error) {
                console.error('Error loading negotiations:', error);
            }
        }
        
        // Add event listeners for real-time price comparison
        document.addEventListener('DOMContentLoaded', function() {
            // Add input event listeners after DOM is loaded
            setTimeout(() => {
                const quantityInput = document.getElementById('negotiationQuantity');
                const priceInput = document.getElementById('negotiationOfferedPrice');
                
                if (quantityInput) {
                    quantityInput.addEventListener('input', updatePriceComparison);
                }
                if (priceInput) {
                    priceInput.addEventListener('input', updatePriceComparison);
                }
            }, 100);
        });

        // Click outside modal to close
        document.addEventListener('click', function(event) {
            const modal = document.getElementById('orderModal');
            if (event.target === modal) {
                closeOrderModal();
            }
        });

        // Escape key to close modal
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeOrderModal();
            }
        });

        function addToRecentlyViewed(product) {
            // Remove if already exists
            recentlyViewedProducts = recentlyViewedProducts.filter(p => p._id !== product._id);
            
            // Add to beginning
            recentlyViewedProducts.unshift({
                _id: product._id,
                name: product.name,
                price: product.price,
                unit: product.unit,
                category: product.category
            });
            
            // Keep only last 8
            recentlyViewedProducts = recentlyViewedProducts.slice(0, 8);
            
            // Save to localStorage
            localStorage.setItem('recentlyViewed', JSON.stringify(recentlyViewedProducts));
        }

        function displayRecentlyViewed() {
