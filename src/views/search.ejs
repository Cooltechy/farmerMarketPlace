    <script>
        let allProducts = [];
        let currentFilter = '';
        let recentlyViewedProducts = JSON.parse(localStorage.getItem('recentlyViewed') || '[]');

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();
            displayRecentlyViewed();
            loadUserNegotiations();
            
            // Set up search form
            document.getElementById('searchForm').addEventListener('submit', handleSearch);
        });

        function handleSearch(e) {
            e.preventDefault();
            const query = document.getElementById('searchInput').value.trim();
            if (query) {
                searchProducts(query);
            } else {
                loadProducts();
            }
        }

        async function loadProducts() {
            showLoading();
            
            try {
                const response = await fetch('/api/search');
                const data = await response.json();
                
                if (data.success) {
                    allProducts = data.products;
                    displayRecommendations();
                    displayTopRated();
                    displayTrending();
                    hideLoading();
                    showAllSections();
                } else {
                    showNoResults();
                }
            } catch (error) {
                console.error('Error loading products:', error);
                showNoResults();
            }
        }

        async function searchProducts(query) {
            showLoading();
            hideOtherSections();
            
            try {
                const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
                const data = await response.json();
                
                if (data.success && data.products.length > 0) {
                    allProducts = data.products;
                    displaySearchResults(query);
                    hideLoading();
                } else {
                    showNoResults();
                }
            } catch (error) {
                console.error('Error searching products:', error);
                showNoResults();
            }
        }

        function filterByCategory(category) {
            // Update active pill
            document.querySelectorAll('.pill').forEach(pill => pill.classList.remove('active'));
            event.target.classList.add('active');
            
            showLoading();
            hideOtherSections();
            
            const searchUrl = category === 'organic' ? '/api/search?organic=true' : `/api/search?category=${category}`;
            
            fetch(searchUrl)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        allProducts = data.products;
                        const categoryName = category === 'organic' ? 'Organic Products' : category.charAt(0).toUpperCase() + category.slice(1);
                        displayFilteredResults(categoryName);
                        hideLoading();
                    } else {
                        showNoResults();
                    }
                })
                .catch(error => {
                    console.error('Error filtering products:', error);
                    showNoResults();
                });
        }

        function displayRecommendations() {
            const container = document.getElementById('recommendedProducts');
            const products = allProducts.slice(0, 8); // Show first 8 products
            
            container.innerHTML = products.map(product => createProductCard(product)).join('');
            container.style.display = 'grid';
            
            // Display negotiation prices after DOM update
            setTimeout(() => displayNegotiationPrices(), 100);
        }

        function displayTopRated() {
            const container = document.getElementById('topRatedProducts');
            // Simulate top-rated by showing organic products first, then by price
            const products = allProducts
                .sort((a, b) => {
                    if (a.isOrganic && !b.isOrganic) return -1;
                    if (!a.isOrganic && b.isOrganic) return 1;
                    return b.price - a.price;
                })
                .slice(0, 6);
            
            container.innerHTML = products.map(product => createProductCard(product)).join('');
            
            // Display negotiation prices after DOM update
            setTimeout(() => displayNegotiationPrices(), 100);
        }

        function displayTrending() {
            const container = document.getElementById('trendingProducts');
            // Simulate trending by showing recent products with good variety
            const products = allProducts
                .sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt))
                .slice(0, 6);
            
            container.innerHTML = products.map(product => createProductCard(product)).join('');
            
            // Display negotiation prices after DOM update
            setTimeout(() => displayNegotiationPrices(), 100);
        }

        function displaySearchResults(query) {
            // Update sections for search results
            document.querySelector('.recommendations-section .section-header h2').textContent = `Results for "${query}"`;
            document.querySelector('.recommendations-section .section-header .section-subtitle').textContent = `Found ${allProducts.length} products`;
            
            displayRecommendations();
        }

        function displayFilteredResults(categoryName) {
            // Update sections for filtered results
            document.querySelector('.recommendations-section .section-header h2').textContent = categoryName;
            document.querySelector('.recommendations-section .section-header .section-subtitle').textContent = `${allProducts.length} products available`;
            
            displayRecommendations();
        }

        function createProductCard(product) {
            const categoryEmoji = getCategoryEmoji(product.category);
            
            return `
                <div class="product-card" onclick="viewProduct('${product._id}')" data-product-id="${product._id}">
                    <div class="product-image-placeholder category-${product.category}">
                        ${categoryEmoji}
                        ${product.isOrganic ? '<div class="organic-badge">ORGANIC</div>' : ''}
                    </div>
                    <div class="product-content">
                        <div class="product-category">${product.category}</div>
                        <div class="product-name">${product.name}</div>
                        <div class="product-price">‚Çπ${product.price.toLocaleString()}</div>
                        <div class="product-unit">per ${product.unit}</div>
                        <div class="product-farmer">${product.farmerName}</div>
                        <div class="negotiation-price" id="negotiation-${product._id}"></div>
                    </div>
                    <div class="product-actions" onclick="event.stopPropagation()">
                        <a href="tel:${product.farmerContact}" class="btn-contact">üìû Contact</a>
                        <button class="btn-negotiate" onclick="negotiatePrice('${product._id}', ${product.price}, '${product.unit}')">üí¨ Negotiate</button>
                        <button class="btn-order" onclick="orderProduct('${product._id}')">üõí Order</button>
                    </div>
                </div>
            `;
        }

        function getCategoryEmoji(category) {
            const emojis = {
                'fruits': 'üçé',
                'vegetables': 'ü•ï',
                'grains': 'üåæ',
                'dairy': 'ü•õ',
                'meat': 'ü•©',
                'herbs': 'üåø',
                'other': 'ü•ó'
            };
            return emojis[category] || 'ü•ó';
        }

        function viewProduct(productId) {
            // Add to recently viewed
            const product = allProducts.find(p => p._id === productId);
            if (product) {
                addToRecentlyViewed(product);
                displayRecentlyViewed();
                
                // Show detailed product info
                alert(`üìã Product Details\n\nName: ${product.name}\nCategory: ${product.category}\nPrice: ‚Çπ${product.price}/${product.unit}\nAvailable: ${product.quantity} ${product.unit}\n\nüë®‚Äçüåæ Farmer Details\nName: ${product.farmerName}\nContact: ${product.farmerContact}\n\n${product.isOrganic ? 'üå± This is an organic product!' : ''}\n\nCall the farmer directly to discuss details and place your order!`);
            }
        }

        function orderProduct(productId) {
            const product = allProducts.find(p => p._id === productId);
            if (product) {
                showOrderModal(product);
            }
        }

        let currentProduct = null;
        let selectedQuantity = 1;

        function showOrderModal(product) {
            currentProduct = product;
            selectedQuantity = 1;
            
            // Populate modal with product information
            document.getElementById('modalProductName').textContent = product.name;
            document.getElementById('modalProductCategory').textContent = product.category;
            document.getElementById('modalProductPrice').textContent = `‚Çπ${product.price}/${product.unit}`;
            document.getElementById('modalProductAvailable').textContent = `${product.quantity} ${product.unit}`;
            document.getElementById('modalProductOrganic').textContent = product.isOrganic ? 'üå± Yes' : 'No';
            document.getElementById('modalProductUnit').textContent = product.unit;
            
            document.getElementById('modalFarmerName').textContent = product.farmerName;
            document.getElementById('modalFarmerLocation').textContent = 'Available on Contact';
            document.getElementById('modalFarmerContact').textContent = product.farmerContact;
            
            // Reset form
            document.getElementById('selectedQuantity').textContent = selectedQuantity;
            document.getElementById('addressStreet').value = '';
            document.getElementById('addressCity').value = '';
            document.getElementById('addressState').value = '';
            document.getElementById('addressPincode').value = '';
            document.getElementById('addressLandmark').value = '';
            document.getElementById('orderNotes').value = '';
            document.getElementById('paymentMethod').value = 'cash-on-delivery';
            
            updateOrderTotal();
            
            // Show modal
            document.getElementById('orderModal').classList.add('show');
            document.body.style.overflow = 'hidden'; // Prevent background scrolling
        }

        function closeOrderModal() {
            document.getElementById('orderModal').classList.remove('show');
            document.body.style.overflow = 'auto';
            currentProduct = null;
            
            // Hide messages
            document.getElementById('successMessage').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
        }

        function changeQuantity(delta) {
            const newQuantity = selectedQuantity + delta;
            
            if (newQuantity >= 1 && newQuantity <= currentProduct.quantity) {
                selectedQuantity = newQuantity;
                document.getElementById('selectedQuantity').textContent = selectedQuantity;
                updateOrderTotal();
            }
            
            // Update buttons
            document.getElementById('decreaseQty').disabled = selectedQuantity <= 1;
            document.getElementById('increaseQty').disabled = selectedQuantity >= currentProduct.quantity;
        }

        function updateOrderTotal() {
            if (!currentProduct) return;
            
            const subtotal = selectedQuantity * currentProduct.price;
            document.getElementById('orderSubtotal').textContent = `‚Çπ${subtotal.toLocaleString()}`;
            document.getElementById('orderTotal').textContent = `‚Çπ${subtotal.toLocaleString()}`;
        }

        function validateOrderForm() {
            const requiredFields = ['addressStreet', 'addressCity', 'addressState', 'addressPincode'];
            let isValid = true;
            
            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field.value.trim()) {
                    field.classList.add('error');
                    isValid = false;
                } else {
                    field.classList.remove('error');
                }
            });
            
            return isValid;
        }

        function showOrderMessage(message, isError = false) {
            const successDiv = document.getElementById('successMessage');
            const errorDiv = document.getElementById('errorMessage');
            
            if (isError) {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
                successDiv.style.display = 'none';
            } else {
                successDiv.textContent = message;
                successDiv.style.display = 'block';
                errorDiv.style.display = 'none';
            }
        }

        function submitOrder() {
            if (!currentProduct) return;
            
            // Validate form
            if (!validateOrderForm()) {
                showOrderMessage('Please fill in all required address fields.', true);
                return;
            }
            
            // Show loading state
            const btn = document.getElementById('placeOrderBtn');
            const btnText = document.getElementById('orderBtnText');
            btn.disabled = true;
            btnText.innerHTML = '<span class="loading-spinner"></span>Placing Order...';
            
            // Call place order function
            placeOrderFromModal();
